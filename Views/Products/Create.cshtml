@model WebApp.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "ml-5" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(p => p.ProductName, new { @class = "control-label" })
                @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control" })
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.ProductDescription, new { @class = "control-label" })
                @Html.TextBoxFor(p => p.ProductDescription, new { @class = "form-control" })
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.CategoryId, new { @class = "control-label" })
                @Html.ListBoxFor(p => p.CategoryId, new SelectList(ViewBag.Categories, "Id", "Title"), new { @class = "form-control"})
            </div>
            <div class="form-group form-check">
                @Html.LabelFor(p => p.Price, new { @class = "control-label" })
                @Html.TextBoxFor(p => p.Price, new { @class = "form-control", @type = "number" })
            </div>
            <div class="form-group form-check">
                @Html.LabelFor(p => p.IsSale, new { @class = "control-label" })
                @Html.CheckBoxFor(p => p.IsSale, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
